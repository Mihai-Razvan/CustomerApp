<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/test_border_2">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:orientation="horizontal"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/address_card_city_TW"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:paddingVertical="15dp"
            android:text="City"
            android:textAlignment="textStart"
            android:textColor="#939292"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/address_card_street_TW"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:paddingVertical="15dp"
            android:text="Street"
            android:textAlignment="textStart"
            android:textColor="#939292"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/address_card_number_TW"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:paddingVertical="15dp"
            android:text="Number"
            android:textAlignment="textStart"
            android:textColor="#939292"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/address_card_details_TW"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:paddingVertical="15dp"
            android:text="Details"
            android:textAlignment="textStart"
            android:textColor="#939292"
            android:textSize="14sp"
            android:textStyle="bold" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>